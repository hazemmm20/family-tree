      <div class="relative max-w-4xl mx-auto text-center z-10">
        <div class="inline-flex items-center gap-2 px-4 py-1.5 rounded-full bg-accent/10 text-accent text-sm font-medium mb-6 border border-accent/20">
          <span class="material-symbols-outlined text-sm">history_edu</span>
          <span><%= page.title %></span>
        </div>

        <h1 class="text-5xl md:text-6xl font-black text-primary dark:text-white mb-6 tracking-tight leading-tight">
          <%= page.title %>
        </h1>

        <p class="text-lg md:text-xl text-gray-600 dark:text-gray-300 max-w-2xl mx-auto leading-relaxed">
          <%= page.subtitle %>
        </p>

        <div class="ornamental-divider max-w-xs mx-auto mt-8">
          <span class="material-symbols-outlined ornamental-icon">stars</span>
        </div>
      </div>
    </section>

    <!-- Content -->
    <section class="relative py-12 px-4 md:px-8 max-w-6xl mx-auto">
      <div class="relative timeline-connector">
        <div class="relative flex items-center justify-between md:justify-normal mb-16 group">
          <div class="absolute left-4 md:left-1/2 md:-translate-x-1/2 flex items-center justify-center z-10">
            <div class="w-8 h-8 rounded-full bg-background-light dark:bg-background-dark border-2 border-accent flex items-center justify-center shadow-lg group-hover:scale-110 transition-transform duration-300">
              <div class="w-2.5 h-2.5 rounded-full bg-primary rotate-45"></div>
            </div>
          </div>

          <div class="w-full md:w-10/12 md:mx-auto pl-12 md:pl-0">
            <div class="bg-card-light dark:bg-card-dark p-6 rounded-xl shadow-[0_4px_20px_-4px_rgba(0,0,0,0.05)] border border-gray-100 dark:border-gray-800 hover:border-accent/30 transition-all duration-300 relative overflow-hidden group-hover:-translate-y-1">
