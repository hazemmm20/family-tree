              <span class="hidden h-4 w-px bg-gray-300 dark:bg-white/10 sm:block"></span>
              <button id="shareBtn" class="flex items-center gap-2 rounded-lg px-4 py-2 hover:bg-gray-100 dark:hover:bg-white/5 transition-colors">
                <span class="material-symbols-outlined text-[20px]">share</span>
                <span>مشاركة</span>
              </button>
            </div>
          <% } else { %>
            <div class="text-sm font-bold text-gray-500 dark:text-gray-400">
              لا يمكن التحميل/الطباعة قبل رفع الملف.
            </div>
          <% } %>
        </div>

        <!-- Info cards -->
        <div class="grid gap-6 md:grid-cols-2">
          <div class="rounded-xl border border-gray-100 bg-white p-6 shadow-sm dark:border-white/10 dark:bg-white/5">
            <div class="flex items-start gap-4">
              <div class="rounded-full bg-accent/10 p-3 text-accent dark:bg-gold/15 dark:text-gold">
                <span class="material-symbols-outlined">history_edu</span>
