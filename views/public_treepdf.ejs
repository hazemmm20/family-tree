              <div class="absolute inset-0 bg-white/10 opacity-0 transition-opacity group-hover:opacity-100"></div>
              <span class="material-symbols-outlined animate-bounce">download</span>
              <div class="flex flex-col items-start text-right">
                <span class="text-sm font-medium opacity-90">تحميل ملف PDF</span>
                <span class="text-xs font-bold opacity-70"><%= pdfUrl %></span>
