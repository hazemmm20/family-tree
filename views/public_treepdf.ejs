          <div class="absolute -right-4 -top-4 -z-0 h-32 w-32 rounded-full bg-primary/20 blur-3xl"></div>
        </div>

        <!-- Actions -->
        <div class="flex flex-col items-center justify-center gap-6 pb-14">
          <% if (pdfUrl) { %>
            <a href="<%= pdfUrl %>" download
